	{

		Name = {"lag"},
		Desc = "Have fake lag that looks funny.",
		Args = {},
		Func = function()

			local Humanoid = Plr.Character.Humanoid
			local Pain = true

			game.Workspace.Gravity = 30

			Humanoid.JumpPower = 20
			Humanoid.WalkSpeed /= 2

			for _, Item in Humanoid.Parent:GetDescendants() do

				if Item:IsA("BasePart") then

					Item.Massless = true

				end

			end

			Lagging = true
			
			spawn(function()

				while Lagging do

					wait(math.random(1,6))

					local Glitch = math.random(1,5)

					if Glitch == 1 then

						Pain = false
						Humanoid.RootPart.Anchored = true

						wait(math.random(50,250) / 100)

						Pain = true

					end

					if Glitch == 2 then

						Humanoid.PlatformStand = true
						Humanoid.Sit = true

						local Animation = Instance.new("Animation")
						Animation.AnimationId = "http://www.roblox.com/asset/?id=180436148"
						local Track = game.Players.LocalPlayer.Character:FindFirstChildWhichIsA("Humanoid"):LoadAnimation(Animation)
						Track.Looped = true
						Track.Priority = Enum.AnimationPriority.Action
						Track:Play()

						wait(math.random(8,13))

						Track:Stop()
						Humanoid.PlatformStand = false

					end

					if Glitch == 3 then

						game.Workspace.Gravity = 0
						Humanoid.RootPart.RotVelocity = Vector3.new(math.random(-15,15),math.random(-15,15),math.random(-15,15))
						Humanoid.PlatformStand = true
						Humanoid.Sit = true

						local Animation = Instance.new("Animation")
						Animation.AnimationId = "http://www.roblox.com/asset/?id=180436148"
						local Track = game.Players.LocalPlayer.Character:FindFirstChildWhichIsA("Humanoid"):LoadAnimation(Animation)
						Track.Looped = true
						Track.Priority = Enum.AnimationPriority.Action
						Track:Play()

						wait(math.random(3,6))

						Track:Stop()
						Humanoid.PlatformStand = false
						game.Workspace.Gravity = 30

					end

					if Glitch == 4 then

						local Old = Humanoid.RootPart.CFrame

						Humanoid.RootPart.CFrame = CFrame.new(0,1000,0)

						wait(math.random(1,2))

						Humanoid.RootPart.CFrame = Old

					end

					if Glitch == 5 then

						local Old = Humanoid.RootPart.CFrame

						wait(math.random(2,3))

						Humanoid.RootPart.CFrame = Old

					end

					if Glitch == 6 then

						game.Workspace.Gravity = 0
						Humanoid.RootPart.RotVelocity = Vector3.new(math.random(-500,500),math.random(-500,500),math.random(-500,500))
						Humanoid.PlatformStand = true

						wait(math.random(50,150) / 100)

						Humanoid.PlatformStand = false
						game.Workspace.Gravity = 30

					end

				end

			end)

			while Lagging do

				wait()

				if Pain then

					Humanoid.RootPart.Anchored = not Humanoid.RootPart.Anchored

				end

				for _, Anim in Humanoid:GetPlayingAnimationTracks() do

					if Anim.Name == "WalkAnim" then
						Anim:AdjustSpeed(tonumber(10))
					end

				end

			end

		end,

	},
	
