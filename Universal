					end
					
				end
				
			end)
			
			Jerk.Activated:Connect(function()

				game.TweenService:Create(Speed,TweenInfo.new(3),{Value = 3}):Play()

			end)

			Jerk.Deactivated:Connect(function()

				game.TweenService:Create(Speed,TweenInfo.new(1),{Value = 0.7}):Play()

			end)
			
			Jerk.Unequipped:Connect(function()

				Track:Stop()
				Track:Destroy()

			end)

