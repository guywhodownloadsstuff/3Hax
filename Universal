			local Jerk = Instance.new("Tool",Plr.Backpack)
			
			Jerk.Name = "Jerk"
			Jerk.ToolTip = "Hold down to increase jerkiness."
			Jerk.TextureId = "http://www.roblox.com/asset/?id=15052258274"
			Jerk.RequiresHandle = false
			
			local Track = nil
			local Speed = Instance.new("NumberValue")
			
			Jerk.Equipped:Connect(function()
				
				local Anim = Instance.new("Animation")
				Anim.Parent = game.Workspace
				Anim.AnimationId = Plr.Character:FindFirstChildOfClass("Humanoid").RigType ~= "R15" and "rbxassetid://72042024" or "rbxassetid://698251653"
